class Book:
  def __init__(self,title,author,genre,publication_year):
    self.title=title
    self.author=author
    self.genre=genre
    self.publication_year=publication_year
  def display__info(self):
    print("The title of the book is:",self.title)
    print("The author of the book is:",self.author)
    print("The genre of the book is:",self.genre)
    print("The book was publishede in:",self.publication_year)
    print("\n")

book1=Book('The Picture of Dorian Gray','Oscar Wilde','Gothic fiction','1890')
book2=Book('Nineteen Eighty-Four','George Orwell','Science fiction','1984')
book3=Book('To Kill a Mockingbird','Harper Lee','Film','1960')
book4=Book('Pride and Prejudice','Jane Austen','Romance','1813')

book1.display__info()
book2.display__info()
book3.display__info()
book4.display__info()
