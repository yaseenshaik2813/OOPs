class Employee:
    def __init__(self, name, salary):
        self.name = name
        self.__salary = salary

    def work(self):
        print(f"{self.name} is working.")

    def show(self):
        print(f"Name: {self.name}")
        print(f"Salary: {self.__salary}")


employee = Employee("John Doe", 5000)


employee.work()
employee.show()
